# Client time drift tolerance
ANTIFRAUD_CLIENT_TIME_DRIFT_S=300

# Rate limiting
ANTIFRAUD_RATE_LIMIT_WINDOW_S=60
ANTIFRAUD_RATE_LIMIT_MAX_PER_USER=5
ANTIFRAUD_RATE_LIMIT_MAX_PER_IP=10

# Nonce TTL for attestation

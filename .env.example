# GPS accuracy thresholds
ANTIFRAUD_ACCURACY_POOR_M=200
ANTIFRAUD_ACCURACY_PERFECT_M=1.0

# Impossible travel detection
ANTIFRAUD_MAX_TRAVEL_SPEED_KMH=120
ANTIFRAUD_JUMP_DISTANCE_M=50000
